<div class="map-filters">
    <%= form_with url: cities_path, method: :get do |f| %>
      <i class="fa-solid fa-calendar-days"></i> <%= f.date_field :date, html5: true, class: "mb-3" %>
      <%= f.submit "Search", class: "btn btn-dark" %>
    <% end %>
</div>
<%= link_to "List View", users_path, class: "btn btn-secondary btn-map" %>
<div style="width: 100%; height: 100vh;"
  data-controller="map"
  data-map-markers-value="<%= @markers.to_json %>"
  data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
</div>
